{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": true
    },
    "include": [
        "src/lib",
        "src/components",
        "src/plugins",
        "src/styles"
    ],
    "exclude": [
        "src/main.tsx",
        "src/App.tsx",
        "src/App.css",
        "node_modules"
    ]
}