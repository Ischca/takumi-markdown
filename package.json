{
  "name": "takumi-markdown",
  "version": "1.0.2",
  "description": "Beautiful Markdown renderer for React with Japanese typography optimization and ruby notation support",
  "author": "ischca",
  "license": "MIT",
  "type": "module",
  "main": "./dist/takumi-markdown.cjs",
  "module": "./dist/takumi-markdown.mjs",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/takumi-markdown.mjs",
      "require": "./dist/takumi-markdown.cjs"
    },
    "./styles.css": "./dist/takumi-markdown.css"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.cjs",
    "dist/**/*.mjs",
    "dist/**/*.css",
    "dist/**/*.d.ts"
  ],
  "keywords": [
    "markdown",
    "react",
    "japanese",
    "typography",
    "ruby",
    "furigana",
    "cjk"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ischca/takumi-markdown"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build --config vite.config.lib.ts && tsc -p tsconfig.lib.json && node scripts/copy-styles.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:ssr": "node scripts/ssr-smoke.mjs && node scripts/ssr-smoke.cjs && node scripts/assert-css.mjs",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "unist-util-visit": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
